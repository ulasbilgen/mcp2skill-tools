{
  "name": "mcp2scripts",
  "version": "0.3.0",
  "description": "Generate JavaScript scripts from MCP Server Tools for Claude Code Skills to use",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp2scripts": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude-code",
    "skills",
    "code-generation",
    "rest-api",
    "javascript",
    "typescript"
  ],
  "author": "Ulas Bilgenoglu",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "acorn": "^8.11.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ulasbilgen/mcp2skill-tools.git",
    "directory": "packages/mcp2scripts"
  },
  "bugs": {
    "url": "https://github.com/ulasbilgen/mcp2skill-tools/issues"
  },
  "homepage": "https://github.com/ulasbilgen/mcp2skill-tools/tree/main/packages/mcp2scripts#readme"
}
