{
  "name": "mcp2agent",
  "version": "0.1.0",
  "description": "Universal bridge from MCP servers to AI agent platforms - manage servers, generate scripts, and create skills via Web UI",
  "author": "Ulas Bilgenoglu",
  "license": "MIT",
  "type": "module",
  "main": "dist/backend/index.js",
  "bin": {
    "mcp2agent": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch src/backend --watch src/cli --watch src/types -e ts --exec \"node --loader ts-node/esm src/backend/index.ts\"",
    "dev:frontend": "vite",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "vite build",
    "start": "node dist/backend/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "1.18.2",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "eventsource": "^2.0.2",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "open": "^10.1.0",
    "openai": "^4.0.0",
    "pm2": "^5.3.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.0.0",
    "lucide-react": "^0.300.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude-code",
    "ai-agents",
    "cursor",
    "skills",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ulasbilgen/mcp2skill-tools"
  }
}
